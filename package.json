{
  "name": "neuekit",
  "version": "1.0.0-alpha.8",
  "license": "MIT",
  "description": "Neue Kit is a fully responsive framework crafted for scalability. Based on the principles of the ITCSS methodology this front-end springboard is flexible, fun to work with (we hope), and built for the future.",
  "main": "dist/neuekit.js",
  "unpkg": "dist/neuekit.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neuekit/neuekit.git"
  },
  "author": "Matt Pilott",
  "bugs": {
    "url": "https://github.com/neuekit/neuekit/issues"
  },
  "homepage": "https://github.com/neuekit/neuekit#readme",
  "browserslist": [
    ">0.5%",
    "not op_mini all",
    "not android <= 4.4.4"
  ],
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.4",
    "@babel/runtime": "^7.3.4",
    "autoprefixer": "^9.4.9",
    "browser-sync": "^2.26.3",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "postcss-cli": "^6.1.0",
    "rollup": "^1.3.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "sassdoc": "^2.5.1",
    "sassdoc-theme-flippant": "^0.1.0"
  },
  "scripts": {
    "serve": "browser-sync start --server --directory --no-notify --files '.' --ignore 'node_modules'",
    "scss": "node-sass -x -r --output-style compressed --output ./dist ./src/styles",
    "sassdoc": "sassdoc ./src/styles --theme flippant",
    "autoprefixer": "postcss --use autoprefixer --replace ./dist/style.css --no-map",
    "build:css": "npm run sassdoc --silent && npm run scss --silent && npm run autoprefixer --silent && mv ./dist/style.css ./dist/neuekit.css",
    "build:js": "rollup --config",
    "build": "npm run build:css --silent && npm run build:js --silent",
    "watch:css": "onchange './src/styles/**/*.scss' -- npm run build:css --silent",
    "watch:js": "rollup --config --watch",
    "watch": "npm-run-all --parallel 'serve --silent' 'watch:css --silent' 'watch:js --silent'",
    "start": "npm run watch --silent"
  }
}
