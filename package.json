{
  "name": "springboard",
  "version": "0.9.9",
  "license": "MIT",
  "description": "The Creative Little SpringBoard is a fully responsive framework crafted for scalability. Based on the principles of the ITCSS methodology this front-end springboard is flexible, fun to work with, and built for the future.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/creativelittledots/springboard.git"
  },
  "author": "Matt Pilott",
  "bugs": {
    "url": "https://github.com/creativelittledots/springboard/issues"
  },
  "homepage": "https://github.com/creativelittledots/springboard#readme",
  "devDependencies": {
    "autoprefixer": "^8.0.0",
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.23.6",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "postcss-cli": "^5.0.0",
    "rollup": "^0.56.2",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-node-resolve": "^3.0.3",
    "rollup-plugin-uglify": "^3.0.0",
    "rollup-watch": "^4.3.1",
    "uglify-es": "^3.3.10"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "iOS 9",
    "not ie_mob <= 12",
    "not ie <= 10",
    "not blackberry <= 7"
  ],
  "scripts": {
    "clean:dev": "rm -rf ./node_modules",
    "clean:app": "rm -rf ./app/node_modules",
    "reset": "yarn run clean:dev && yarn",
    "update": "yarn upgrade-interactive --latest",
    "scss": "node-sass --omit-source-map-url --recursive --output-style compressed --output ./app/styles ./app/styles",
    "autoprefixer": "postcss --use autoprefixer --replace ./app/styles/style.css --no-map",
    "build:css": "yarn run scss --silent && yarn run autoprefixer --silent",
    "build:js": "rollup --config",
    "build": "yarn run build:css --silent && yarn run build:js --silent",
    "serve": "browser-sync start --server --directory --no-notify --files './app/styles/**/*.css, ./app/scripts/**/*.js, ./**/*.html, !node_modules/**/*.html'",
    "watch:css": "onchange './app/styles/**/*.scss' -- yarn run build:css --silent",
    "watch:js": "rollup --config --watch",
    "watch:all": "npm-run-all --parallel 'serve --silent' 'watch:css --silent' 'watch:js --silent'",
    "postinstall": "yarn run watch:all --silent",
    "go": "yarn run postinstall --silent"
  }
}
