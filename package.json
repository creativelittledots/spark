{
  "name": "springboard",
  "version": "0.9.9",
  "license": "MIT",
  "description": "SpringBoard is a fully responsive framework crafted for scalability. Based on the principles of the ITCSS methodology this front-end springboard is flexible, fun to work with (we hope), and built for the future.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/creativelittledots/springboard.git"
  },
  "author": "Matt Pilott",
  "bugs": {
    "url": "https://github.com/creativelittledots/springboard/issues"
  },
  "homepage": "https://github.com/creativelittledots/springboard#readme",
  "browserslist": [
    ">0.5%",
    "not op_mini all",
    "not android <= 4.4.4"
  ],
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.0.0",
    "autoprefixer": "^9.1.5",
    "browser-sync": "^2.26.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "onchange": "^5.0.2",
    "postcss-cli": "^6.0.0",
    "rollup": "^0.66.4",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-watch": "^4.3.1"
  },
  "scripts": {
    "clean:dev": "rm -rf ./node_modules",
    "clean:app": "rm -rf ./app/node_modules",
    "reset": "npm run clean:dev && npm i",
    "scss": "node-sass --omit-source-map-url --recursive --output-style compressed --output ./app/styles ./app/styles",
    "autoprefixer": "postcss --use autoprefixer --replace ./app/styles/style.css --no-map",
    "build:css": "npm run scss --silent && npm run autoprefixer --silent",
    "build:js": "rollup --config",
    "build": "npm run build:css --silent && npm run build:js --silent",
    "serve": "browser-sync start --server --directory --no-notify --files './app/styles/**/*.css, ./app/scripts/**/*.js, ./**/*.html, !node_modules/**/*.html'",
    "watch:css": "onchange './app/styles/**/*.scss' -- npm run build:css --silent",
    "watch:js": "rollup --config --watch",
    "watch:all": "npm-run-all --parallel 'serve --silent' 'watch:css --silent' 'watch:js --silent'",
    "postinstall": "npm run watch:all --silent",
    "start": "npm run postinstall --silent"
  }
}
