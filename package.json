{
  "name": "neuekit-docs",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Official Neue Kit Documentation",
  "author": "Team Neue Kit",
  "browserslist": [
    ">0.5%",
    "not op_mini all",
    "not android < 4.4.4"
  ],
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/plugin-transform-runtime": "7.5.5",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "7.5.5",
    "@babel/runtime": "7.5.5",
    "autoprefixer": "9.6.1",
    "browser-sync": "2.26.7",
    "custom-event-polyfill": "^1.0.6",
    "element-closest": "^3.0.0",
    "neuekit": "^1.0.0-alpha.12",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "onchange": "6.0.0",
    "postcss-cli": "6.1.3",
    "promise-polyfill": "8.1.3",
    "rollup": "1.19.4",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.0.2",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "5.1.1",
    "smoothscroll-polyfill": "^0.4.2",
    "stickyfilljs": "^2.1.0",
    "svg4everybody": "^2.1.9",
    "whatwg-fetch": "^3.0.0"
  },
  "scripts": {
    "serve": "browser-sync start --server --no-notify --files '.' --ignore 'node_modules'",
    "scss": "node-sass -x -r --output-style compressed --output ./styles ./styles",
    "autoprefixer": "postcss --use autoprefixer --replace ./styles/style.css --no-map",
    "build:css": "npm run scss --silent && npm run autoprefixer --silent",
    "build:js": "rollup --config",
    "build": "npm run build:css --silent && npm run build:js --silent",
    "watch:css": "onchange './styles/**/*.scss' -- npm run build:css --silent",
    "watch:js": "rollup --config --watch",
    "watch": "npm-run-all --parallel 'serve --silent' 'watch:css --silent' 'watch:js --silent'",
    "start": "npm run watch --silent"
  }
}
