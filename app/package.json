{
  "name": "PROJECT",
  "version": "1.0.0",
  "license": "MIT",
  "description": "YOUR PROJECT DESCRIPTION HERE",
  "author": "Creative Little Dots",
  "browserslist": [
    ">0.5%",
    "not op_mini all",
    "not android <= 4.4.4"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "autoprefixer": "^9.1.5",
    "browser-sync": "^2.24.7",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "rollup": "^0.66.0",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-watch": "^4.3.1"
  },
  "scripts": {
    "clean": "rm -rf ./node_modules",
    "reset": "npm run clean && npm i",
    "scss": "node-sass --omit-source-map-url --recursive --output-style compressed --output ./styles ./styles",
    "autoprefixer": "postcss --use autoprefixer --replace ./styles/style.css --no-map",
    "build:css": "npm run scss --silent && npm run autoprefixer --silent",
    "build:js": "rollup --config",
    "build": "npm run build:css --silent && npm run build:js --silent",
    "serve": "browser-sync start --server --no-notify --files './styles/**/*.css, ./scripts/**/*.js, ./**/*.html, !node_modules/**/*.html'",
    "watch:css": "onchange './styles/**/*.scss' -- npm run build:css --silent",
    "watch:js": "rollup --config --watch",
    "watch:all": "npm-run-all --parallel 'serve --silent' 'watch:css --silent' 'watch:js --silent'",
    "postinstall": "npm run watch:all --silent",
    "start": "npm run postinstall --silent"
  }
}
